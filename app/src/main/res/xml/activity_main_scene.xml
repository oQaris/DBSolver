<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@id/end"
        motion:constraintSetStart="@id/start">
        <!--dragScale - чем больше, тем меньше усилий надо для смахивания-->
        <!--maxAcceleration - чем больше, тем быстрее-->
        <OnSwipe
            motion:dragDirection="dragLeft"
            motion:dragScale="10"
            motion:maxAcceleration="100"
            motion:onTouchUp="autoComplete"
            motion:touchAnchorSide="left" />
    </Transition>

    <Transition
        motion:constraintSetEnd="@id/start"
        motion:constraintSetStart="@id/end">
        <OnSwipe
            motion:dragDirection="dragRight"
            motion:dragScale="10"
            motion:maxAcceleration="100"
            motion:onTouchUp="autoComplete"
            motion:touchAnchorSide="right" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@id/fdRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            motion:layout_constraintBottom_toBottomOf="@id/guideline"
            motion:layout_constraintEnd_toStartOf="@id/line"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/line"
            android:layout_width="30dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="@id/guideline"
            motion:layout_constraintRight_toRightOf="parent"
            motion:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="@color/purple_500" />
        </Constraint>

        <Constraint
            android:id="@id/dcmpRecyclerView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="10dp"
            motion:layout_constraintBottom_toBottomOf="@id/guideline"
            motion:layout_constraintLeft_toRightOf="@id/line"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@id/fdRecyclerView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            motion:layout_constraintBottom_toBottomOf="@id/guideline"
            motion:layout_constraintEnd_toStartOf="@id/line"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/line"
            android:layout_width="30dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="@id/guideline"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="@color/orange" />
        </Constraint>

        <Constraint
            android:id="@id/dcmpRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="10dp"
            motion:layout_constraintBottom_toBottomOf="@id/guideline"
            motion:layout_constraintLeft_toRightOf="@id/line"
            motion:layout_constraintRight_toRightOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>
</MotionScene>